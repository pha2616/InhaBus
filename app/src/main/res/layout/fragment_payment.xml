<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/payment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:id="@+id/toolbar_division"
        android:background="@color/colorDivision"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/payment_title"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/bus_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbar_division"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        >

        <ImageView
            android:id="@+id/logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_bus"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="25dp"
            >

            <TextView
                android:id="@+id/reservation_date_at_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예매 날짜"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/reservation_detail_at_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예매 상세"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/pay_at_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="2500원"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar_division2"
        android:background="@color/colorDivision"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/bus_detail"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_division2"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제 방법"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/cardview_dark_background"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nickname"
                android:text="nickname"
                android:textSize="15sp"
                android:paddingLeft="25dp"
                android:paddingTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:id="@+id/reservation_date"
                android:text="date"
                android:textSize="15sp"
                android:paddingTop="25dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:id="@+id/direction"
                android:text="direction"
                android:textSize="15sp"
                android:paddingTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:id="@+id/city"
                android:text="city"
                android:textSize="15sp"
                android:paddingTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:id="@+id/time"
                android:text="time"
                android:textSize="15sp"
                android:paddingTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/pay_button"
            android:text="@string/bus_payment"
            android:theme="@style/ButtonStyle"
            android:background="@drawable/yellow_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="35dp"/>
    </LinearLayout>

</RelativeLayout>